  height: 100vh;


}

.sug_xz {
  background-color: white;
  margin-left: 30rpx;
  margin-right: 30rpx;
  border-radius: 10px;
  border: 3px solid white;
  box-shadow: 5px 5px 5px #ddd;
  height: 55vh;
  margin-top: 200rpx;
}

.sug_in {
  margin-left: 20rpx;
  margin-right: 20rpx;
  margin-top: 20rpx;
  border: 1rpx solid;
  border-color: #473b7b #3584a7 #30d2be;
  border-radius: 2px;
  height: 300rpx;
  font-size: 30rpx;
}

.sug_name {
  margin: 10px;
  border: 5px solid #ddd;
  height: 50px;
}

.sug_logo {
  width: 650rpx;
  height: 105rpx;
  margin-left: 35rpx;
}

.sug_icon {
  width: 150rpx;
  height: 150rpx;
  margin-top: 50rpx;
  margin-bottom: 30rpx;
}

.sug_ZW {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}

.sug_xz {
  background-repeat: no-repeat;
  background-position-y: 0rpx;
  background-position-x: 0rpx;
  background-size: 100%;
}

.fankui {
  margin-left: 80rpx;
  font-size: 30rpx;
  margin-bottom: 20rpx;
}

.xuank {
  margin-top: 30rpx;
  margin-left: 100rpx;
  margin-right: 110rpx;
  font-size: 35rpx;
  zoom: 80%;
}

.radio-group {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

.btn {
  background-image: linear-gradient(-225deg, #473b7b 0%, #3584a7 51%, #30d2be 100%);
  color: #fff;
  margin-top: 90rpx;
  width: 150px;
  height: 35px;
  align-items: center;
  box-shadow: 2px 2px 4px #afeeee;
  border-radius: 30px;
  font-size: 14px;
}

.btn::after {
  border: 0;
}

.btn_hover {
  background-image: linear-gradient(-225deg, #ac32e4 0%, #7918f2 48%, #4801ff 100%);
}
